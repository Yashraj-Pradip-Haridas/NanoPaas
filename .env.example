# NanoPaaS Configuration
# Copy to .env and update values

# Server
SERVER_HOST=0.0.0.0
SERVER_PORT=8080
SERVER_READ_TIMEOUT=30s
SERVER_WRITE_TIMEOUT=30s

# Docker
DOCKER_HOST=
DOCKER_API_VERSION=
DOCKER_CONTAINER_PREFIX=nanopaas-
DOCKER_DEFAULT_NETWORK=nanopaas

# PostgreSQL
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=nanopaas
POSTGRES_PASSWORD=nanopaas
POSTGRES_DB=nanopaas
POSTGRES_SSL_MODE=disable

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Router/Traefik
ROUTER_DOMAIN=localhost
ROUTER_HTTP_PORT=80
ROUTER_HTTPS_PORT=443
ROUTER_ENABLE_HTTPS=false

# GitHub OAuth
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
GITHUB_WEBHOOK_SECRET=your_webhook_secret

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRY=24h
JWT_REFRESH_EXPIRY=168h

# Frontend
FRONTEND_URL=http://localhost:3000
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
